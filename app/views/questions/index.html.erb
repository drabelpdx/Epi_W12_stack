<% if current_user != nil %>
  <%= link_to "Ask Question", new_user_question_path(current_user) %>
<% else %>
  <p>Log in to ask a question.</p>
<% end %>


<h2>Questions</h2>



<ul>
  <% Question.all.each do |question| %>
    <li><%= link_to question.question, user_question_path(question.user, question) %> --
    <small>Asked by: <%= question.user.email %></small></li>
    <hr>
  <% end %>
</ul>
